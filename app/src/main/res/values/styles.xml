<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/myPrimary</item>
        <item name="colorPrimaryDark">@color/myPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RaisedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/raisedButton</item>
        <item name="android:textColor">@color/raisedButtonText</item>
    </style>
    <style name="BorderLessButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/myPrimary</item>
    </style>
    <style name="RaisedButton.Entrar" parent="RaisedButton">
        <item name="backgroundTint">@color/entrar</item>
    </style>
    <style name="ComoFunciona" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/myPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>



</resources>
